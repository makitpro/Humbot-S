<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bq.robotic.robopad"
    android:installLocation="auto"
    android:versionCode="5"
    android:versionName="5.0" >

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bq.robotic.robopad.RoboPadSplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bq.robotic.robopad.SelectRobotActivity"
            android:label="@string/title_activity_select_robot"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.bq.robotic.robopad.RoboPad"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".RoboPadSettings"
            android:label="@string/title_activity_robo_pad_sttings"
            android:screenOrientation="landscape"
            android:theme="@style/SettingsTheme">
        </activity>
    </application>

</manifest>